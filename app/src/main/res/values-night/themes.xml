<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectK2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#222222</item>
        <item name="colorAccent">@color/tab_textcolor_dark</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/tab_textcolor_dark</item>
        <item name="myCardBackgroundColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#A33817</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:windowBackground">@color/dark_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="materialButtonStyle">@style/Theme.btn</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="colorControlNormal">@drawable/test_statelist</item>
        <item name="appbar_text_color">@color/tab_textcolor_dark</item>




    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="materialButtonStyle">@style/Theme.btn</item>
        <item name="colorAccent">@color/tab_textcolor_dark</item>
        <item name="colorPrimary">@color/tab_textcolor_dark</item>
        <item name="colorPrimaryDark">@color/tab_textcolor_dark</item>
        <item name="colorOnPrimary">@color/tab_textcolor_dark</item>
        <item name="colorSecondary">#A33817</item>
        <item name="iconColor">@color/tab_textcolor_dark</item>



    </style>


</resources>


